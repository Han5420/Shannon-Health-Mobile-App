<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#05796B"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Shannon"
            android:textSize="24dp"
            android:textColor="@color/white"
            android:padding="10dp"
            android:id="@+id/authTv" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="24dp"
            android:id="@+id/btnLogin" />

    </LinearLayout>

<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/mainRecyclerView"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:visibility="gone" />-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/dailyShannonNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daily Shannon News"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:textStyle="bold" />
            <ImageButton
                android:id="@+id/dailyShannonImg1"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/daily_shannon_news1" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/myChart"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textSize="13dp"
                    android:background="@drawable/shape_for_circle_button"
                    android:text="My Chart" />

                <Button
                    android:id="@+id/urgentCare"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textSize="13dp"
                    android:background="@drawable/shape_for_circle_button"
                    android:layout_toRightOf="@id/myChart"
                    android:layout_marginLeft="10dp"
                    android:text="Urgent care" />

                <Button
                    android:id="@+id/viewPrescription"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textSize="13dp"
                    android:background="@drawable/shape_for_circle_button"
                    android:layout_toRightOf="@id/urgentCare"
                    android:layout_marginLeft="10dp"
                    android:text="View prescription" />

                <Button
                    android:id="@+id/viewPayBill"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textSize="13dp"
                    android:background="@drawable/shape_for_circle_button"
                    android:layout_toRightOf="@id/viewPrescription"
                    android:layout_marginLeft="10dp"
                    android:text="View/Pay bill" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daily Health News"
                android:textStyle="bold"
                android:layout_below="@+id/myChart"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:textSize="18dp" />
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addFab"
            android:src="@android:drawable/ic_input_add"
            app:fabSize="normal"
            app:rippleColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="24dp"
            android:layout_marginRight="24dp" />
    </RelativeLayout>
</LinearLayout>