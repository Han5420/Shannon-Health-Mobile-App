<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".AddActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:background="#05796B"
            android:id="@+id/chatbotAns"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_marginBottom="25dp"
            android:padding="10dp"
            android:text="Hello, this is Shannon ChatBot service.
            \nPlease enter the number you want to access.
            \n\n1: Checking nearby Doctors\n2: The newest health news\n3: Shannon visiting hours\n4: Finding nearest locations" />
        <TextView
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:background="#CCCCCC"
            android:textSize="16dp"
            android:layout_marginBottom="25dp"
            android:id="@+id/showUserAnswer"
            android:layout_gravity="right"
            android:text="num"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="#05796B"
            android:textSize="16dp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:id="@+id/showInfo"
            android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/answerEditTv"/>
        <Button
            android:id="@+id/sendBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="send"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

</LinearLayout>